<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_iedetail_item_title"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="2"
        android:background="@drawable/circle"
        android:textSize="20sp"
        android:textColor="#674242"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="3"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/tv_iedetail_item_money"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:textSize="23sp"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/tv_iedetail_item_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"/>
        
    </LinearLayout>

    <TextView
        android:id="@+id/tv_iedetail_item_remarks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:textColor="#4f4c4c"
        android:textSize="17sp" />

    <CheckBox
        android:id="@+id/cb_iedetail_item_check"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

</LinearLayout>