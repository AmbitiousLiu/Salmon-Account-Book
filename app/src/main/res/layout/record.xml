<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordActivity"
    android:background="@drawable/beijing3"
    android:orientation="horizontal"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/layout_record">

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"

        >
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="60dp" />-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_record"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/jilu"
                android:textSize="50sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:id="@+id/ll_record_choosedate">
                <ImageView
                    android:id="@+id/iv_record_calendar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/calendar"/>
                <TextView
                    android:id="@+id/tv_record_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="请选择日期"
                    android:textColor="#4682B4"
                    android:textSize="20sp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:background="@drawable/ie"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">
                    <RadioGroup
                        android:id="@+id/rg_ie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RadioButton
                            android:id="@+id/rb_income"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收入"
                            android:textColor="#4682B4"
                            android:textSize="20sp"
                            android:layout_gravity="center"/>
                        <RadioButton
                            android:id="@+id/rb_expenditure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="支出"
                            android:textColor="#4682B4"
                            android:textSize="20sp" />
                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/rg_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rb_fuzhuang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="服装"
                        android:textSize="20sp"
                        android:textColor="#4682B4"
                        android:layout_gravity="center"/>
                    <RadioButton
                        android:id="@+id/rb_canyin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="餐饮"
                        android:textSize="20sp"
                        android:textColor="#4682B4"
                        android:layout_gravity="center"/>
                    <RadioButton
                        android:id="@+id/rb_chuxing"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="出行"
                        android:textSize="20sp"
                        android:textColor="#4682B4"
                        android:layout_gravity="center"/>
                    <RadioButton
                        android:id="@+id/rb_qita"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="其他"
                        android:textSize="20sp"
                        android:textColor="#4682B4"
                        android:layout_gravity="center"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_margin="5dp"
                    android:id="@+id/tv_type_i"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/qian"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/et_record_money"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="match_parent"
                    android:hint="momey..."
                    android:textColor="#4682B4"
                    android:digits="0123456789."/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_margin="5dp"
                    android:id="@+id/tv_record_remarks"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/zhu"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/et_record_remarks"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="match_parent"
                    android:hint="备注..."
                    android:textColor="#4682B4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:id="@+id/btn_record_submit"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/tijiao"/>

                <Button
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:id="@+id/btn_record_cancel"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:background="@drawable/quxiao"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>